const precisionDisplay = player.precisionDePases != null ? `${player.precisionDePases}%` : '‚Äî';
const isSDorDC = (player.posicion?.trim().toUpperCase() ?? '') === 'SD' || (player.posicion?.trim().toUpperCase() ?? '') === 'DC';
const ocasionesDisplay = isSDorDC ? (player.ocasionesDeGol !== undefined && player.ocasionesDeGol !== '' ? String(player.ocasionesDeGol) : '‚Äî') : '';
