---
import type { WpPostEmbedded } from '../types/wordpress';
import NewsCard from './NewsCard.astro';

interface Props {
  posts: WpPostEmbedded[];
  title?: string;
}

const { posts, title = 'Últimas Noticias' } = Astro.props;
---
<section class="space-y-8">
  {title && <h2 class="text-2xl font-bold tracking-tight text-white">{title}</h2>}
  {posts.length > 0 ? (
    <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3" role="list">
      {posts.map((post) => (
        <li>
          <NewsCard post={post} />
        </li>
      ))}
    </ul>
  ) : (
    <p class="text-white/50">No hay noticias aún.</p>
  )}
</section>
